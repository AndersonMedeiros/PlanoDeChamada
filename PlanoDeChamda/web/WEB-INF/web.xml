<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>autenticador</servlet-name>
        <servlet-class>controller.autenticador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>atualizar</servlet-name>
        <servlet-class>controller.atualizar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>filtroPaginas</servlet-name>
        <servlet-class>controller.filtroPaginas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sair</servlet-name>
        <servlet-class>controller.sair</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cadastrar</servlet-name>
        <servlet-class>controller.cadastrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gerarRelatorio</servlet-name>
        <servlet-class>controller.gerarRelatorio</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>autenticador</servlet-name>
        <url-pattern>/autenticador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>atualizar</servlet-name>
        <url-pattern>/restrito/atualizar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sair</servlet-name>
        <url-pattern>/restrito/sair</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cadastrar</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gerarRelatorio</servlet-name>
        <url-pattern>/restrito/gerarRelatorio</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>filtroPaginas</filter-name>
        <filter-class>controller.filtroPaginas</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filtroPaginas</filter-name>
        <url-pattern>/restrito/*</url-pattern>
    </filter-mapping>
</web-app>
